<%= simple_form_for(@faphra) do |f| %>
  <%= f.error_notification %>

  <div class="field">
    <div class="control">
      <%= f.input :body, label: "Today favorite phrase", 
        input_html: { class: "textarea" }, wrapper: false, 
        label_html: { class: "label" },
        placeholder: "Add your new favorite phrase..." %>
    </div>
  </div>

  <%= f.button :submit, class: "button is-info" %>
<% end %>